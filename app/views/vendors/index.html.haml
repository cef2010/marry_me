.container
	.jumbotron.center-align
		%h1 Vendors
		%p The right people to make the best day of your life, the best day of your life.
	.content
		.vendor_sort
			%button.btn-flat.waves-effect.vendor_button{data: { category: "Florist"}}
				Florists
			%button.btn-flat.waves-effect.vendor_button{data: { category: "Attire"}}
				Attire
			%button.btn-flat.waves-effect.vendor_button{data: { category: "Music"}}
				Music
			%button.btn-flat.waves-effect.vendor_button{data: { category: "Venue"}}
				Venue
			%button.btn-flat.waves-effect.vendor_button{data: { category: "Baker"}}
				Baker
			%button.btn-flat.waves-effect.vendor_button{data: { category: "Caterer"}}
				Caterer
			%button.btn-flat.waves-effect.vendor_button{data: { category: "Photographer"}}
				Photographer
			%button.btn-flat.waves-effect.vendor_button{data: { category: "Videographer"}}
				Videographer
			%button.btn-flat.waves-effect.vendor_button{data: { category: "Photobooth"}}
				Photobooth
			%button.btn-flat.waves-effect.vendor_button{data: { category: "Invitation"}}
				Invitation
			%button.btn-flat.waves-effect.vendor_button{data: { category: "Rental"}}
				Rental
			%button.btn-flat.waves-effect.vendor_button{data: { category: "Other"}}
				Other
		.vendor_display
			- if @vendors.any?
				.current_vendors
					= render(partial: 'vendor_card', locals: {vendors: @vendors, hash: @hash})
			- else
				%h3 No vendors match your search.
		-# MAP
