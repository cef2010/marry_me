
.row
  .col.s12
    %ul#tabs.tabs
      %li.tab.col.s6
        %a#vendor_info_link.active{:href => '#vendors'}Vendors
      %li.tab.col.s6
        %a#vendor_map_link{:style => 'cursor: pointer;', :data => {:map_hash => @hash.to_json}}Map
  #vendors.col.s12
    .row.custom-tab
      .col.m12
      %br
        - vendors.each do |vendor|
          .vendor_card.col.m10.offset-m1
            .row
              .col.m2
                %img{src: vendor.vendor_avatar.url(:thumb)}
              .col.m10
                = vendor.name
                %br
                %a{href: "http://#{vendor.website}", target: '_blank'} #{vendor.website}
                %br
                %span #{vendor.city}, #{vendor.state}
                %br
                = link_to 'See more', vendor_path(vendor)
    .col.s10.offset-s1
      = link_to 'ALL VENDORS', vendors_path
  #map_vendors.col.s12.hide
    .row.custom-tab
      .col.m12
        #map{style: 'width: 100%; height: 400px;'}
