.container
  .couple_show_info
    .row.valign-wrapper{style: 'height: 300px;'}
      .col.s4.valign
        %img.w90{src: @couple.couple_avatar.url(:medium)}
      .col.s8
        .w90
          %h4
            = @couple.try(:name)
          %p.couple_date
            The Date:
            = @couple.try(:wedding_date)
          %p.ceremony_location
            The Ceremony:
            = @couple.try(:ceremony_location)
          %p.reception_location
            The Reception:
            = @couple.try(:reception_location)
          - if current_couple && current_couple.id == @couple.id
            %p#open_couple_form.btn Edit Info
    %p.couple_desc.w90
      = @couple.try(:description)
  .w90
    = render(partial: 'info_form')
  %hr
  -if current_couple && current_couple.id == @couple.id
    = render(partial: 'current_couple')
  -else
    = render(partial: 'not_current')
  - if (current_couple && current_couple.id == @couple.id)
    .w90
      = render(partial: 'comment_card')
  - elsif (current_vendor && @couple.wedding_vendor(current_vendor) && @couple.contract_accepted(current_vendor))
    .w90
      = render(partial: 'comment_card')
