.container.z-depth-3
	%img{src: "https://s3-us-west-2.amazonaws.com/marry-me-production/public/resources/contact%2Boverlay.png", style: "width: 100%; height: 400px;"}

	%div{style: 'margin-top: 45px;'}
		= render partial: 'static_nav'
	.container
		%br
		= form_for @contact do |f|
			= f.label :name
			= f.text_field :name

			= f.label :email
			= f.email_field :email

			= f.label :message
			= f.text_area :body, style: 'height: 150px; margin-bottom: 15px;'

			= recaptcha_tags  

			= f.submit 'Contact Us', class: 'btn', style: "margin-top: 15px;"
